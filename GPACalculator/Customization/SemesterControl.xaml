<UserControl x:Class="GPACalculator.SemesterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPACalculator"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="40"/>
                <Setter Property="Width" Value="300"/>
                <Setter Property="Height" Value="75"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="SemesterLabel" FontSize="40" Text="Semester 1" Height="75" Width="300" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBox>
        <Border Grid.Row="1">
            <StackPanel HorizontalAlignment="Left" MaxWidth="1300" Orientation="Horizontal" x:Name="Labels" Background="LightGray">
                <Border>
                    <TextBlock Width="600">Name</TextBlock>
                </Border>
                <Border>
                    <TextBlock Width="250">Credit Hours</TextBlock>
                </Border>
                <Border>
                    <TextBlock Width="250">Grade</TextBlock>
                </Border>
                <Border Width="100"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Name="CoursesStackPanel">

        </StackPanel>
        <Button Grid.Row="0" HorizontalAlignment="Center" x:Name="AddCourseButton" Click="AddCourse" Height="76" Margin="0,12,0,0" VerticalAlignment="Top">Add Course</Button>

    </Grid>

</UserControl>
