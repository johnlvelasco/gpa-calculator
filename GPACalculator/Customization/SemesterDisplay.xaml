<UserControl x:Class="GPACalculator.SemesterDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPACalculator"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1220">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel x:Name="SemesterStackPanel">

            </StackPanel>
            <Button x:Name="btnAddSemester" Click="AddSemester" Width="300" Height="100" FontSize="30">Add Semester</Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
